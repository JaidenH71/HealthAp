-- SQLite format 3

-- Table: researcher
CREATE TABLE IF NOT EXISTS researcher (
    ResearcherID INTEGER PRIMARY KEY AUTOINCREMENT,
    Created TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
    ResearcherName TEXT NOT NULL,
    ResearcherEmail TEXT NOT NULL
);

-- Table: prompts
CREATE TABLE IF NOT EXISTS prompts (
    PromptID INTEGER PRIMARY KEY AUTOINCREMENT,
    ResearcherID INTEGER,
    Created TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
    Consent TEXT NOT NULL,
    Msg TEXT NOT NULL,
    FOREIGN KEY (ResearcherID) REFERENCES researcher(ResearcherID)
);

